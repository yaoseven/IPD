.add-project-box {
	position: fixed;
	background: #F6F7FA;
	min-height: 100%;
	width: 100%;
}
.input-box{
  display: flex
}
.input-customerList{
  flex: 1
}
.topic{
  padding-left:10rpx
}
.form-item-name{
  height:92rpx;
}
.form-item-name input{
  width:100%;
  padding:20rpx 40rpx;
  border-bottom:2rpx solid #f0f0f0;
  height:92rpx;
  font-size:32rpx;
}
.form-item-desc{
  height:300rpx;
  border-bottom:2rpx solid #f0f0f0;
}
.form-item-desc textarea{
  width:100%;
  padding:20rpx 40rpx;
  height:300rpx;
  font-size:32rpx;
  box-sizing: border-box;
}
.topFoot{
  padding:0 40rpx;
  margin-top:46rpx;
}
.topFoot-addfile{
  float:left;
  width:40rpx;
  height:40rpx;
}
.topFoot-btn{
  background: #29C37F;
  border-radius: 26rpx;
  float:right;
  align-content: right;
  height:50rpx;
  width:160rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
}
.input-box text{
  margin-right: 8rpx;
  flex-wrap: wrap
}

.topFoot-img{
  width: 80rpx;
  height: 40rpx;
  float: left;
  padding-right: 30rpx;
}

.uploadFile{
  padding-bottom: 20rpx
}
.comment-image-box {
  overflow: hidden;
  padding: 0 30rpx;
  margin-top: 40rpx;
}

.item-comment-image {
  float: left;
  position: relative;
  width: 31%;
  height: 200rpx;
  margin:0 3.5% 27rpx 0;
  border: 1px solid #efefef;
  background: #EDEEF2;
  border-radius: 6rpx;
}

image {
  width: 100%;
  height: 100%;
}

.plus-icon {            
  display: inline-block;
  background: #ABB1C5;
  width: 4rpx;
  height: 50rpx;
  position: absolute;                  
  left: 50%;            
  top: 50%;            
  transform: translate(-50%,-50%);
}             

.plus-icon-after {            
  background: #ABB1C5;  
  width: 4rpx;           
  height: 50rpx;   
  position: absolute;                  
  left: 50%;            
  top: 50%;            
  transform: rotateZ(90deg);
  margin-top: -25rpx;
  margin-left: -2rpx;
}

.delete-box {
  position: absolute;
  right: 0;
  top: 0;
  width: 28rpx;
  height: 28rpx;
  background: #29C37F;
  text-align: center;
  font-size:16rpx;
  color:#ffffff;
  line-height:28rpx;
  font-weight:bold;
}
.file{
  height: 48rpx;
  width: 100%;
  padding: 0 30rpx;
  display: flex;
  margin: 20rpx 0;
  align-items: center;
}

.file-img-box {
   width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}
.fileImg{
  width: 48rpx;
  height: 48rpx;
}

.fileName{
  font-size: 24rpx;
  color: #7E8495;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.delFile{
  width: 60rpx;
  height: 40rpx;
  text-align: right;
  line-height: 40rpx;
}

.title{
  color: #C7CAD3;
  font-size: 28rpx;
  float: left
}
.fileTitle{
  display: flex;
  padding: 20rpx 30rpx;
}
.fileTitleImg{
  width: 26rpx;
  height:26rpx;
  position:absolute;
  right:30rpx;

}