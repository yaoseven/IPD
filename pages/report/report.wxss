/* pages/addComment/addComment.wxss */
.scroll-comment-box {
  min-height: 100%;
  padding: 40rpx 40rpx;
  background: #f6f7fa;
}
.progressName{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #7B8294;
}
.progress{
  padding: 34rpx 0;
  display: flex
}
.dragCircle{
background:green;
width:100rpx;
height:100rpx;
border-radius:50%;
position:absolute;
top:10rpx;

}
.progressName{
  flex: 3;
}
.progressinfo{
  flex: 9
}
.comment-textarea {
  padding: 30rpx 30rpx;
  width: 100%;
  font-size: 28rpx;
  height: 500rpx;
  background: #ffffff;
  box-sizing: border-box;
  background:#fff;
  margin-bottom: 30rpx;
}

.comment-box{
  margin-bottom: 30rpx;
}


.comment-image-box {
  overflow: hidden;
  padding: 0;
}

.item-comment-image {
  float: left;
  position: relative;
  width: 31%;
  height: 200rpx;
  margin:0 3.5% 27rpx 0;
  border: 1px solid #efefef;
  background: #EDEEF2;
  border-radius: 6rpx;
}

image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.plus-icon {            
  display: inline-block;
  background: #ABB1C5;
  width: 4rpx;
  height: 50rpx;
  position: absolute;                  
  left: 50%;            
  top: 50%;            
  transform: translate(-50%,-50%);
}             

.plus-icon-after {            
  background: #ABB1C5;  
  width: 4rpx;           
  height: 50rpx;   
  position: absolute;                  
  left: 50%;            
  top: 50%;            
  transform: rotateZ(90deg);
  margin-top: -25rpx;
  margin-left: -2rpx;
}

.delete-box {
  position: absolute;
  right: 0;
  top: 0;
  width: 28rpx;
  height: 28rpx;
  background: #29C37F;
  border-radius-bottom-left: 10rpx;
  text-align: center;
  font-size:16rpx;
  color:#ffffff;
  line-height:28rpx;
  font-weight:bold;
}
.topFoot{
  margin-top:46rpx;
  overflow: hidden
}
.topFoot-addfile{
  float:left;
  width:40rpx;
  height:40rpx;
}
.topFoot-btn{
  margin: 320rpx 0 50rpx 0
}
.topFoot-img{
  width: 80rpx;
  height: 40rpx;
  float: left;
  padding-right: 30rpx;
}

.uploadFile{
  padding-bottom: 30rpx
}
.delFile{
  width: 60rpx;
  height: 40rpx;
  text-align: right;
  line-height: 40rpx;
}

.title{
  color: #C7CAD3;
  font-size: 28rpx;
  float: left
}
.fileTitle{
  display: flex;
  padding: 10rpx 30rpx;
}
.fileTitleImg{
  width: 26rpx;
  height:26rpx;
  position:absolute;
  right:30rpx;

}
.file-img-box {
   width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}
.fileImg{
  width: 48rpx;
  height: 48rpx;
}

.file{
  height: 48rpx;
  width: 100%;
  padding: 0 30rpx;
  display: flex;
  margin: 20rpx 0;
  align-items: center;
}

.fileName{
  font-size: 24rpx;
  color: #7E8495;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}