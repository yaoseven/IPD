.scroll-box {
    display: flex;
    flex-direction: column;
    height: 100%;
    background: #F6F7FA;
}

.catelog-box{
    flex: 1;
    background: #fff;
    overflow: auto;
}

.catelog-box .form-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: visible;
  position: relative;
  transition: all 0.4s;
}

.catelog-box .form-box .form-item {
  padding: 30rpx 40rpx;
  width: 100%;
}

.catelog-box .form-box .form-item .label-box {
    width: 80rpx;
    font-family: PingFangSC-Medium;
    font-size: 30rpx;
    color: #7E8495;
}

.catelog-box .form-box .form-item .input-box {
    font-family: PingFangSC-Regular;
    font-size: 32rpx;
    color: #000000;
}

.catelog-box .form-box .delete-item {
  width: 180rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  transform: translateX(180rpx);
  transition: all 0.4s;
  position: absolute;
  top: 0;
  right: 0;
}

.catelog-box .form-box .delete-item .edit-box {
    display: flex;
    align-items: center;
    justify-content: center;
    float: left;
    width: 90rpx;
    height: 100%;
    font-size: 24rpx;
    color: #ffffff;
    background: #666666;
}

.catelog-box .form-box .delete-item .delete-box {
    display: flex;
    align-items: center;
    justify-content: center;
    float: left;
    width: 90rpx;
    height: 100%;
    font-size: 24rpx;
    color: #ffffff;
    background: red;
}

.survey-nullBox{
  width: 100%;
  height: 94rpx;
}

.survey-tab{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  background: #29C37F;
  color: #ffffff;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
}

.survey-tab view{
  border-left: 2rpx solid #FFFFFF;
  height: 50rpx; 
}

.survey-tab text{
  flex: 1;
}

.item-move{
  position: fixed;
  width: 100%;
  height: auto;
  border: 1px solid #EDEEF2;
  opacity: 0.7;
}

.survey-move-box{
  background: #ffffff;
  color: #000000;
  padding-left: 30rpx;
  width: auto;
  height: auto;
}

.survey-item{
  display: flex;
  justify-content: space-between;
  overflow: hidden;
  border-top:1rpx solid #F0F0F0;
}

.survey-item:first-of-type{
  border-top:0px;
}

.survey-content{
  padding: 26rpx 0;
  padding-right: 30rpx;
  width: 100%;
  display:flex;
  align-items:center;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(140rpx);
  transform: translateX(140rpx);
  margin-left: -140rpx;
}
.survey-lable{
  width: 80rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: #7E8495;
}
.survey-sort{
  width: 180rpx;
  padding-right: 30rpx; 
  text-align:right;
}


.catelog-bg-box {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 8;
  background: rgba(0,0,0,0.6);
}

.add-catelog-box {
  position: fixed;
  z-index: 100;
  left: 50%;
  top: 50%;
  width:80%;
  padding: 30rpx;
  transform: translate(-50%, -50%);
  background: #ffffff;
  border-radius: 10rpx;
}

.add-catelog-box .form-box {
  background: #ffffff;
}

.add-catelog-box .form-box .label-box {
  width: 160rpx;
}