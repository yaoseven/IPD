.file-box{
  margin-top:20rpx
}
.at-file-pic {
    margin-top: 12rpx;
    display: flex;
    width: 100%;
    flex-wrap: wrap;
}
.at-file-pic image {
    width: 31%;
    height: 120rpx;
    margin-right: 3.5%;
    margin-bottom: 14rpx;
    border-radius: 10rpx;
}

.at-file-pic .margin-bottom0 {
  margin-bottom: 0;
}

.no-margin-right {
  margin-right: 0 !important;
}

.at-file text{
  font-size:24rpx;
  color:#7B8294 ;
  line-height: 48rpx
}


.answerTitle{
  position: absolute;
  right: 0;
  top: 100rpx;
  width: 100rpx;
  height: 28rpx;
  font-family: PingFangSC-Medium;
  font-size: 20rpx;
  color: #FFFFFF;
  letter-spacing: 0.52rpx;
  background: #FF4B41;
  border-radius: 2px;
  text-align: center;
  line-height: 28rpx;
  z-index: 99
}

/* 留言转发区 */
.at-situation {
    margin-top: 20rpx;
    font-size: 24rpx;
    line-height: 24rpx;
    color: #7B8294;
    letter-spacing: 0.44rpx;
    overflow: hidden;
}
.at-comments {
    float: left;
    display: flex;
    margin-right: 40rpx;
    margin-top: 18rpx;
}

.at-comments image {
    width:26rpx;
    height:24rpx;
    margin-right: 10rpx;
}
.at-browse image{
    height:20rpx;
    margin-top: 2rpx;
}
.at-reply {
    float: right;
    width:160rpx;
    height: 52rpx;
    background: #29C37F;
    border-radius: 26rpx;
    text-align: center;
    line-height: 52rpx;
    font-size: 28rpx;
    color: #FFFFFF;
    letter-spacing: 0.52rpx;
}

.share-box {
    float: left;
    padding: 18rpx 40rpx 0 0;
    margin: 0;
    background: none;
    border-radius: 0;
}

.share-box image {
    width:26rpx;
    height:24rpx;
    margin-right: 10rpx;
}